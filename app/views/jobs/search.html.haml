= form_tag patients_path, method: 'get' do
  = text_field_tag :search, params[:search]
  = submit_tag "Search", :name => nil

- if @job.present?
  %table.table.table-bordered.table-condensed
    %tr
      %th title
      %th company

    - @job.each do |job|

      .job
        %h2= link_to job.title, job
        %p= job.company